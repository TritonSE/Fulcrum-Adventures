{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "rootDir": "src",

    "module": "CommonJS",
    "moduleResolution": "Node",

    "types": ["node"],

    "strict": true,

    "declaration": false,

    "declarationMap": false,
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
